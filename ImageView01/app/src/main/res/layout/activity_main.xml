<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.imageview01.MainActivity">

    <TextView
        android:text="Top Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageView
        app:srcCompat="@drawable/rightarrow"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="90dp" />

    <TextView
        android:text="Top Middle Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_height="90dp"
        app:srcCompat="@drawable/stopsign"
        android:id="@+id/imageView2"
        android:layout_width="100dp" />

    <TextView
        android:text="Bottom Middle Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/androidlogo"
        android:id="@+id/imageView3" />

    <TextView
        android:text="Bottom Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/leftarrow"
        android:id="@+id/imageView4" />
</LinearLayout>
